    <script>
        // Default drawer names
        const DEFAULT_DRAWERS = {
            'Fagyaszt√≥ 1': ['F1A', 'F1B', 'F1C', 'F1D', 'F1E', 'F1F'],
            'Fagyaszt√≥ 2': ['F2A', 'F2B', 'F2C', 'F2D', 'F2E', 'F2F'],
            'Fagyaszt√≥ 3': ['F3A', 'F3B', 'F3C', 'F3D', 'F3E', 'F3F']
        };

        // Data Store
        let items = [];
        let drawerNames = JSON.parse(JSON.stringify(DEFAULT_DRAWERS));
        let editingId = null;
        let searchQuery = '';
        let filterType = '';

        // Theme Toggle
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;
        
        themeToggle.addEventListener('click', () => {
            const current = body.getAttribute('data-theme');
            const newTheme = current === 'light' ? 'dark' : 'light';
            body.setAttribute('data-theme', newTheme);
            themeToggle.textContent = newTheme === 'light' ? 'üåô' : '‚òÄÔ∏è';
            localStorage.setItem('theme', newTheme);
        });

        // Load theme
        const savedTheme = localStorage.getItem('theme') || 'light';
        body.setAttribute('data-theme', savedTheme);
        themeToggle.textContent = savedTheme === 'light' ? 'üåô' : '‚òÄÔ∏è';

        // Fullscreen Toggle
        const fullscreenBtn = document.getElementById('fullscreenBtn');
        
        fullscreenBtn.addEventListener('click', () => {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(err => {
                    console.log('Fullscreen hiba:', err);
                });
            } else {
                document.exitFullscreen();
            }
        });

        // Update icon when fullscreen changes
        document.addEventListener('fullscreenchange', () => {
            fullscreenBtn.textContent = document.fullscreenElement ? '‚õ∂' : '‚õ∂';
        });

        // Item Modal
        const itemModal = document.getElementById('itemModal');
        const addBtn = document.getElementById('addBtn');
        const closeModal = document.getElementById('closeModal');
        const cancelBtn = document.getElementById('cancelBtn');
        const itemForm = document.getElementById('itemForm');
        const itemFagyaszto = document.getElementById('itemFagyaszto');
        const itemFiok = document.getElementById('itemFiok');

        addBtn.addEventListener('click', () => openItemModal());
        closeModal.addEventListener('click', () => itemModal.classList.remove('active'));
        cancelBtn.addEventListener('click', () => itemModal.classList.remove('active'));

        // Update fiok dropdown when fagyaszto changes
        itemFagyaszto.addEventListener('change', () => {
            const selected = itemFagyaszto.value;
            itemFiok.innerHTML = '<option value="">V√°lassz fi√≥kot</option>';
            
            if (selected && drawerNames[selected]) {
                drawerNames[selected].forEach(drawer => {
                    const option = document.createElement('option');
                    option.value = drawer;
                    option.textContent = drawer;
                    itemFiok.appendChild(option);
                });
            }
        });

        function openItemModal(item = null) {
            editingId = item ? item.id : null;
            document.getElementById('modalTitle').textContent = item ? 'Term√©k szerkeszt√©se' : '√öj term√©k';
            
            if (item) {
                itemFagyaszto.value = item.fagyaszto;
                itemFagyaszto.dispatchEvent(new Event('change'));
                setTimeout(() => {
                    itemFiok.value = item.fiok;
                    document.getElementById('itemType').value = item.type || 'zoldseg';
                    document.getElementById('itemName').value = item.name;
                    document.getElementById('itemExpiry').value = item.expiry || '';
                    document.getElementById('itemNote').value = item.note || '';
                }, 0);
            } else {
                itemForm.reset();
                itemFiok.innerHTML = '<option value="">El≈ësz√∂r v√°lassz fagyaszt√≥t</option>';
            }
            
            itemModal.classList.add('active');
        }

        // Form Submit
        itemForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const itemData = {
                id: editingId || Date.now(),
                fagyaszto: itemFagyaszto.value,
                fiok: itemFiok.value,
                type: document.getElementById('itemType').value,
                name: document.getElementById('itemName').value.trim(),
                expiry: document.getElementById('itemExpiry').value || null,
                note: document.getElementById('itemNote').value.trim(),
                created: editingId ? items.find(i => i.id === editingId).created : new Date().toISOString(),
                modified: new Date().toISOString()
            };

            if (editingId) {
                items = items.map(i => i.id === editingId ? itemData : i);
            } else {
                items.push(itemData);
            }

            saveData();
            renderItems();
            itemModal.classList.remove('active');
        });

        // Delete Item
        function deleteItem(id) {
            if (confirm('Biztosan t√∂rl√∂d ezt a t√©telt?')) {
                items = items.filter(i => i.id !== id);
                saveData();
                renderItems();
            }
        }

        // Settings Modal
        const settingsModal = document.getElementById('settingsModal');
        const settingsBtn = document.getElementById('settingsBtn');
        const closeSettings = document.getElementById('closeSettings');
        const cancelSettings = document.getElementById('cancelSettings');
        const saveSettings = document.getElementById('saveSettings');
        const drawerEditor = document.getElementById('drawerEditor');

        settingsBtn.addEventListener('click', openSettings);
        closeSettings.addEventListener('click', () => settingsModal.classList.remove('active'));
        cancelSettings.addEventListener('click', () => settingsModal.classList.remove('active'));
        saveSettings.addEventListener('click', saveDrawerNames);

        function openSettings() {
            renderDrawerEditor();
            settingsModal.classList.add('active');
        }

        function renderDrawerEditor() {
            drawerEditor.innerHTML = '';
            
            Object.keys(drawerNames).forEach(fagyaszto => {
                const section = document.createElement('div');
                section.className = 'drawer-section';
                
                const title = document.createElement('div');
                title.className = 'drawer-section-title';
                title.textContent = `‚ïê‚ïê‚ïê ${fagyaszto} ‚ïê‚ïê‚ïê`;
                section.appendChild(title);
                
                drawerNames[fagyaszto].forEach((drawer, index) => {
                    const group = document.createElement('div');
                    group.className = 'drawer-input-group';
                    
                    const label = document.createElement('div');
                    label.className = 'drawer-label';
                    label.textContent = DEFAULT_DRAWERS[fagyaszto][index] + ':';
                    
                    const input = document.createElement('input');
                    input.type = 'text';
                    input.className = 'drawer-input';
                    input.value = drawer;
                    input.dataset.fagyaszto = fagyaszto;
                    input.dataset.index = index;
                    
                    group.appendChild(label);
                    group.appendChild(input);
                    section.appendChild(group);
                });
                
                drawerEditor.appendChild(section);
            });
        }

        function saveDrawerNames() {
            const inputs = drawerEditor.querySelectorAll('.drawer-input');
            const newNames = JSON.parse(JSON.stringify(DEFAULT_DRAWERS));
            
            inputs.forEach(input => {
                const fagyaszto = input.dataset.fagyaszto;
                const index = parseInt(input.dataset.index);
                const value = input.value.trim() || DEFAULT_DRAWERS[fagyaszto][index];
                newNames[fagyaszto][index] = value;
            });
            
            drawerNames = newNames;
            saveData();
            renderItems();
            settingsModal.classList.remove('active');
        }

        // Delete all items (but keep drawer names)
        document.getElementById('deleteAllData').addEventListener('click', () => {
            if (confirm('Biztosan t√∂r√∂lsz MINDEN t√©telt?\n\n‚ö†Ô∏è A fi√≥k nevek megmaradnak!\n\nEz nem visszavonhat√≥!')) {
                items = [];
                saveData();
                renderItems();
                alert('Minden t√©tel t√∂r√∂lve! A fi√≥k nevek megmaradtak.');
            }
        });

        // Filters
        document.getElementById('searchInput').addEventListener('input', (e) => {
            searchQuery = e.target.value.toLowerCase();
            renderItems();
        });

        // Stat k√°rty√°k sz≈±r≈ë funkci√≥
        document.querySelectorAll('.stat-card').forEach(card => {
            card.addEventListener('click', () => {
                const filter = card.getAttribute('data-filter');
                
                // Active √°llapot kezel√©se
                document.querySelectorAll('.stat-card').forEach(c => c.classList.remove('active'));
                document.getElementById('filterAll').classList.remove('active');
                card.classList.add('active');
                
                filterType = filter;
                renderItems();
            });
        });

        // √ñsszes gomb
        document.getElementById('filterAll').addEventListener('click', () => {
            document.querySelectorAll('.stat-card').forEach(c => c.classList.remove('active'));
            document.getElementById('filterAll').classList.add('active');
            filterType = '';
            renderItems();
        });

        // Get Expiry Status
        function getExpiryStatus(expiry) {
            if (!expiry) return 'unknown';
            
            const today = new Date();
            const expiryDate = new Date(expiry);
            const diffDays = Math.floor((expiryDate - today) / (1000 * 60 * 60 * 24));

            if (diffDays < 0) return 'expired';
            if (diffDays <= 30) return 'warning';
            return 'ok';
        }

        // Format Date
        function formatDate(dateStr) {
            if (!dateStr) return 'Nincs megadva';
            const date = new Date(dateStr);
            return date.toLocaleDateString('hu-HU');
        }

        // Render Items
        function renderItems() {
            const itemList = document.getElementById('itemList');
            
            let filtered = items.filter(item => {
                if (searchQuery && !item.name.toLowerCase().includes(searchQuery)) {
                    return false;
                }
                if (filterType && item.type !== filterType) {
                    return false;
                }
                return true;
            });

            // Sort by expiry date
            filtered.sort((a, b) => {
                if (!a.expiry) return 1;
                if (!b.expiry) return -1;
                return new Date(a.expiry) - new Date(b.expiry);
            });

            if (filtered.length === 0) {
                itemList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üîç</div>
                        <p>Nincs tal√°lat</p>
                    </div>
                `;
            } else {
                const typeIcons = {
                    'zoldseg': 'ü•¨',
                    'hus': 'ü•©',
                    'hal': 'üêü',
                    'tejtermek': 'üç∞',
                    'pekaru': 'ü•ñ',
                    'egyeb': 'üì¶'
                };
                
                itemList.innerHTML = filtered.map(item => {
                    const status = getExpiryStatus(item.expiry);
                    const typeIcon = typeIcons[item.type] || 'üì¶';
                    
                    return `
                        <div class="item-card" data-type="${item.type}">
                            <div class="item-location">${typeIcon} ${item.fagyaszto} - ${item.fiok}</div>
                            <div class="item-header">
                                <div>
                                    <div class="item-name">${item.name}</div>
                                    ${item.note ? `<div class="item-info">üí¨ ${item.note}</div>` : ''}
                                    ${item.expiry ? `<div class="item-date date-${status}">üìÖ ${formatDate(item.expiry)}</div>` : ''}
                                </div>
                                <div class="item-actions">
                                    <button class="item-btn" onclick="openItemModal(${JSON.stringify(item).replace(/"/g, '&quot;')})">‚úèÔ∏è</button>
                                    <button class="item-btn" onclick="deleteItem(${item.id})">üóëÔ∏è</button>
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');
            }

            updateStats();
        }

        // Update Stats
        function updateStats() {
            const stat1 = items.filter(i => i.type === 'zoldseg').length;
            const stat2 = items.filter(i => i.type === 'hus').length;
            const stat3 = items.filter(i => i.type === 'hal').length;
            const stat4 = items.filter(i => i.type === 'tejtermek').length;
            const stat5 = items.filter(i => i.type === 'pekaru').length;
            const stat6 = items.filter(i => i.type === 'egyeb').length;

            document.getElementById('stat1').textContent = stat1;
            document.getElementById('stat2').textContent = stat2;
            document.getElementById('stat3').textContent = stat3;
            document.getElementById('stat4').textContent = stat4;
            document.getElementById('stat5').textContent = stat5;
            document.getElementById('stat6').textContent = stat6;
        }

        // CSV Export - T√©telek
        document.getElementById('exportItemsBtn').addEventListener('click', () => {
            if (items.length === 0) {
                alert('Nincs export√°lhat√≥ t√©tel!');
                return;
            }

            const timestamp = new Date().toISOString().replace(/[:.]/g, '-').slice(0, -5);
            const headers = ['fagyaszto', 'fiok', 'tipus', 'nev', 'datum', 'leiras'];
            const rows = items.map(item => [
                item.fagyaszto,
                item.fiok,
                item.type,
                item.name,
                item.expiry || '',
                item.note || ''
            ]);

            const csv = [headers, ...rows]
                .map(row => row.map(cell => `"${cell}"`).join(','))
                .join('\n');

            const blob = new Blob(['\ufeff' + csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `fagyaszto_tetelek_${timestamp}.csv`;
            link.click();
        });

        // CSV Export - Fi√≥knevek
        document.getElementById('exportDrawersBtn').addEventListener('click', () => {
            const timestamp = new Date().toISOString().replace(/[:.]/g, '-').slice(0, -5);
            const headers = ['fagyaszto', 'fiok_kod', 'fiok_nev'];
            const rows = [];
            
            Object.keys(drawerNames).forEach(fagyaszto => {
                drawerNames[fagyaszto].forEach((fiokNev, index) => {
                    const defaultNev = DEFAULT_DRAWERS[fagyaszto][index];
                    rows.push([fagyaszto, defaultNev, fiokNev]);
                });
            });

            const csv = [headers, ...rows]
                .map(row => row.map(cell => `"${cell}"`).join(','))
                .join('\n');

            const blob = new Blob(['\ufeff' + csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `fagyaszto_fiokok_${timestamp}.csv`;
            link.click();
        });

        // CSV Import - T√©telek
        document.getElementById('importItemsBtn').addEventListener('click', () => {
            document.getElementById('csvItemsInput').click();
        });

        document.getElementById('csvItemsInput').addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = (event) => {
                try {
                    const csv = event.target.result;
                    const lines = csv.split('\n').map(line => line.trim()).filter(line => line);
                    
                    const imported = [];
                    for (let i = 1; i < lines.length; i++) {
                        const values = lines[i].split(',').map(v => v.replace(/^"|"$/g, '').trim());
                        if (values.length >= 4) {
                            imported.push({
                                id: Date.now() + Math.random(),
                                fagyaszto: values[0],
                                fiok: values[1],
                                type: values[2] || 'egyeb',
                                name: values[3],
                                expiry: values[4] || null,
                                note: values[5] || '',
                                created: new Date().toISOString(),
                                modified: new Date().toISOString()
                            });
                        }
                    }

                    if (confirm(`${imported.length} t√©tel import√°l√°sa?\nA megl√©v≈ë t√©telek fel√ºl√≠r√≥dnak!`)) {
                        items = imported;
                        saveData();
                        renderItems();
                        alert('Sikeres import√°l√°s!');
                    }
                } catch (error) {
                    alert('Hiba az import√°l√°s sor√°n!\n' + error.message);
                    console.error(error);
                }
            };
            reader.readAsText(file, 'UTF-8');
            e.target.value = '';
        });

        // CSV Import - Fi√≥knevek
        document.getElementById('importDrawersBtn').addEventListener('click', () => {
            document.getElementById('csvDrawersInput').click();
        });

        document.getElementById('csvDrawersInput').addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = (event) => {
                try {
                    const csv = event.target.result;
                    const lines = csv.split('\n').map(line => line.trim()).filter(line => line);
                    
                    const importedDrawers = JSON.parse(JSON.stringify(DEFAULT_DRAWERS));
                    
                    for (let i = 1; i < lines.length; i++) {
                        const values = lines[i].split(',').map(v => v.replace(/^"|"$/g, '').trim());
                        if (values.length >= 3) {
                            const fagyaszto = values[0];
                            const defaultNev = values[1];
                            const customNev = values[2];
                            
                            if (importedDrawers[fagyaszto]) {
                                const index = DEFAULT_DRAWERS[fagyaszto].indexOf(defaultNev);
                                if (index !== -1) {
                                    importedDrawers[fagyaszto][index] = customNev;
                                }
                            }
                        }
                    }

                    if (confirm('Fi√≥knevek import√°l√°sa?\nA megl√©v≈ë nevek fel√ºl√≠r√≥dnak!')) {
                        drawerNames = importedDrawers;
                        saveData();
                        renderItems();
                        alert('Sikeres import√°l√°s!');
                    }
                } catch (error) {
                    alert('Hiba az import√°l√°s sor√°n!\n' + error.message);
                    console.error(error);
                }
            };
            reader.readAsText(file, 'UTF-8');
            e.target.value = '';
        });

        // Local Storage
        function saveData() {
            localStorage.setItem('fagyaszto_items', JSON.stringify(items));
            localStorage.setItem('fagyaszto_drawers', JSON.stringify(drawerNames));
        }

        function loadData() {
            const savedItems = localStorage.getItem('fagyaszto_items');
            const savedDrawers = localStorage.getItem('fagyaszto_drawers');
            
            if (savedItems) {
                items = JSON.parse(savedItems);
            }
            
            if (savedDrawers) {
                drawerNames = JSON.parse(savedDrawers);
            }
            
            renderItems();
        }

        // Init
        loadData();
    </script>
</body>
</html>
